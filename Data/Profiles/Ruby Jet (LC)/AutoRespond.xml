<!--

 Format of each entry is:

<item guid="#">
 <regex>regular expression or words to match, seperated by commas</regex>
 <delay>time in seconds before responding</delay>
 <response>what to reply back with</respond>
</item>

 For example:

    Hello , Hi , Howdy :3: Hiya!

 Would respond to any input that has " Hello ", " Hi " or " Howdy " in it
 It would wait 3 second before responding
 It would respond with " Hiya! "

 response may also contain action keys, such as {jump}
 The following will make your toon jump anytime the word "jump" is matched:

    jump:1000:{MovementJump}

 Order is important, as the 1st item matched will generate the response
 and then will stop. So make sure you get the important ones first :)

 Special responses: [wielded], [fighting], [numbers], [emote]
 [wielded] will return whatever you are holding in your hand
 [fighting] will return the name of the last creature to have attacked you
 [numbers] will parse thru the input text and look for a string of numbers and repeat it back
 [emote] will parse thru the input text and try to find an emote, then will do it

-->

<AutoResponse>

<item guid="1">
	<regex>30 second, UCM, respond</regex>
	<delay>3</delay>
	<response>Hi</response>
</item>

<item guid="2">
	<regex>wield, held, holding, item , hand , weapon</regex>
	<delay>6</delay> 
	<response>[wielded]</response>
</item>

<item guid="3">
	<regex>fight, fighting, monster, combat, creature, critter</regex>
	<delay>6</delay>
	<response>[fighting]</response>
</item>

<item guid="4">
	<regex>dungeon, location</regex>
	<delay>7</delay>
	<response>egg orchard</response>
</item>

<item guid="5">
	<regex>number</regex>
	<delay>5</delay> 
	<response>[numbers]</response>
</item>

<item guid="6">
	<regex>repeat</regex>
	<delay>5</delay>
	<response>[repeat]</response>
</item>

<item guid="7">
	<regex>emote,command</regex>
	<delay>5</delay> 
	<response>[emote]</response>
</item>

<item guid="8">
	<regex>jump twice,jump .* two ,hop </regex>
	<delay>2</delay>
	<response>{MovementJump}</response>
	<repeat>2</repeat>
</item>

<item guid="9">
	<regex>jump, hop </regex>
	<delay>2</delay>
	<response>{MovementJump}</response>
</item>

<item guid="10">
	<regex>thank you, thanks, good day</regex>
	<delay>2</delay> 
	<response>np</response>
</item>

<item guid="11">
	<regex>^Hello$,Hello,Howdy</regex> 
	<delay>3</delay>
	<response>Hello</response>
</item>

<item guid="12">
	<regex>^hi$, hi </regex> 
	<delay>3</delay> 
	<response>Hi</response>
</item>

<item guid="13">
	<regex>\?$</regex>
	<delay>5</delay>
	<response>what?</response>
</item>

<item guid="14">
	<regex>tell </regex>
	<delay>5</delay>
	<response>ok, sure</response>
</item>

<item guid="15">
	<regex>read,inscribe,inscription</regex>
	<delay>6</delay> 
	<response>how do I do that?</response>
</item>

<item guid="16">
	<regex>follow</regex>
	<delay>5</delay> 
	<response>What? why?</response>
</item>

<item guid="17">
	<regex> ban </regex>
	<delay>4</delay>
	<response>can I get a case number?</response>
</item>

<item guid="18">
	<regex>.*</regex>
	 <delay>4</delay>
	 <response>ok</response>
</item>

</AutoResponse>
